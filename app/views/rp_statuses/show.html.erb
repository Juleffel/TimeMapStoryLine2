<%- model_class = RpStatus -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @rp_status.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @rp_status.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:color) %>:</strong></dt>
  <dd><%= @rp_status.color %></dd>
  <dt><strong><%= model_class.human_attribute_name(:display_last) %>:</strong></dt>
  <dd><%= @rp_status.display_last %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              rp_statuses_path, :class => 'btn btn-default'  %>
<% if can? :manage, model_class %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rp_status_path(@rp_status), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rp_status_path(@rp_status),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>