<%= form_for @presence, :html => { :class => "form-horizontal presence" } do |f| %>

    <% if @presence.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@presence.errors.count, "error") %> prohibited this presence from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @presence.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :node_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :node_id, :class => 'form-control' %>
    </div>
    <%= error_span(@presence[:node_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :character_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :character_id, :class => 'form-control' %>
    </div>
    <%= error_span(@presence[:character_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            presences_path, :class => 'btn btn-default' %>

<% end %>
