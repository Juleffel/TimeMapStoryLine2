<%- model_class = Category -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:num) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:image_url) %></th>
      <th><%= model_class.human_attribute_name(:permission_level) %></th>
      <th><%= model_class.human_attribute_name(:special) %></th>
      <th><%= model_class.human_attribute_name(:is_rpg) %></th>
      <th><%= model_class.human_attribute_name(:is_flood) %></th>
      <th><%= model_class.human_attribute_name(:special) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%= render :partial => 'rows', locals: {categories: @categories, level: 0} %>
  </tbody>
</table>
